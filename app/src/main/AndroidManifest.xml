<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.excellassonde.tutoringapp">

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <meta-data
        android:name="com.google.firebase.messaging.default_notification_icon"
        android:resource="@mipmap/ic_launcher_round" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:versionCode="1"
        android:versionName="one"
        android:theme="@style/AppTheme">
        <activity android:name=".FirstActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AdjustAvailability"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChooseCourseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ChooseDayAndTutor"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StudentConfirmationPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ConfirmSession"
            android:screenOrientation="portrait" />
        <activity
            android:name=".RegisterAsTutor"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SessionReview"
            android:screenOrientation="portrait" />
        <activity
            android:name=".StudentLogin"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TutorLogin"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TutorMainPage"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TutorRegistrationConfirmation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TutorSignUp"
            android:screenOrientation="portrait" />
        <activity android:name=".TutorStepToStepRegistration" />

        <service android:name=".MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>