            <!--android:layout_alignEnd="@+id/beginning_text" />-->


        <TextView
            android:id="@+id/times_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/times_information"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            android:layout_below="@id/availability_section"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/monday"
            android:layout_width="125dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/monday"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_below="@id/times_info"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="27dp"/>


        <EditText
            android:id="@+id/monday_availability"
            android:layout_width="202dp"
            android:layout_height="44dp"
            android:background="@drawable/textbox_background"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_below="@+id/times_info"
            android:layout_toRightOf="@+id/monday"
            android:layout_toEndOf="@+id/monday"
            android:textColor="@color/colorPrimary"
            android:hint="@string/times_hint"
            android:textColorHint="@android:color/darker_gray"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/tuesday"
            android:layout_width="125dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/tuesday"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_below="@id/monday"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="27dp"/>

        <EditText
            android:id="@+id/tuesday_availability"
            android:layout_width="202dp"
            android:layout_height="44dp"
            android:background="@drawable/textbox_background"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_below="@+id/monday_availability"
            android:layout_toRightOf="@+id/tuesday"
            android:layout_toEndOf="@+id/tuesday"
            android:textColor="@color/colorPrimary"
            android:hint="@string/times_hint"
            android:textColorHint="@android:color/darker_gray"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/wednesday"
            android:layout_width="125dp"
            android:layout_height="44dp"
            android:layout_below="@id/tuesday"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="27dp"
            android:gravity="center"
            android:text="@string/wednesday"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/wednesday_availability"
            android:layout_width="205dp"
            android:layout_height="44dp"
            android:background="@drawable/textbox_background"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_below="@+id/tuesday_availability"
            android:layout_toRightOf="@+id/wednesday"
            android:layout_toEndOf="@+id/wednesday"
            android:textColor="@color/colorPrimary"
            android:hint="@string/times_hint"
            android:textColorHint="@android:color/darker_gray"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/thursday"
            android:layout_width="125dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/thursday"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_below="@id/wednesday"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="27dp"/>

        <EditText
            android:id="@+id/thursday_availability"
            android:layout_width="202dp"
            android:layout_height="44dp"
            android:background="@drawable/textbox_background"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_below="@+id/wednesday_availability"
            android:layout_toRightOf="@+id/thursday"
            android:layout_toEndOf="@+id/thursday"
            android:textColor="@color/colorPrimary"
            android:hint="@string/times_hint"
            android:textColorHint="@android:color/darker_gray"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/friday"
            android:layout_width="125dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/friday"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_below="@id/thursday"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="27dp"/>

        <EditText
            android:id="@+id/friday_availability"
            android:layout_width="202dp"
            android:layout_height="44dp"
            android:background="@drawable/textbox_background"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_below="@+id/thursday_availability"
            android:layout_toRightOf="@+id/friday"
            android:layout_toEndOf="@+id/friday"
            android:textColor="@color/colorPrimary"
            android:hint="@string/times_hint"
            android:textColorHint="@android:color/darker_gray"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/saturday"
            android:layout_width="125dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/saturday"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_below="@id/friday"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="27dp"/>

        <EditText
            android:id="@+id/saturday_availability"
            android:layout_width="202dp"
            android:layout_height="44dp"
            android:background="@drawable/textbox_background"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_below="@+id/friday_availability"
            android:layout_toRightOf="@+id/saturday"
            android:layout_toEndOf="@+id/saturday"
            android:textColor="@color/colorPrimary"
            android:hint="@string/times_hint"
            android:textColorHint="@android:color/darker_gray"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/sunday"
            android:layout_width="125dp"
            android:layout_height="44dp"
            android:gravity="center"
            android:text="@string/sunday"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:layout_below="@id/saturday"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="27dp"/>

        <EditText
            android:id="@+id/sunday_availability"
            android:layout_width="202dp"
            android:layout_height="44dp"
            android:background="@drawable/textbox_background"
            android:ems="10"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_below="@+id/saturday_availability"
            android:layout_toRightOf="@+id/sunday"
            android:layout_toEndOf="@+id/sunday"
            android:textColor="@color/colorPrimary"
            android:hint="@string/times_hint"
            android:textColorHint="@android:color/darker_gray"
            android:layout_centerVertical="true" />


        <Button
            android:id="@+id/register_button"
            android:layout_width="279dp"
            android:layout_height="44dp"
            android:layout_below="@id/sunday"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="27dp"
            android:background="@drawable/button_background"
            android:onClick="addToTutors"
            android:text="@string/register"
            android:textColor="@android:color/white" />
    </android.widget.RelativeLayout>
</ScrollView>